    <script src="~/AdminTemplate/javascripts/pixel-admin.js"></script>
    <script src="~/AdminTemplate/javascripts/libs/jquery-datatables-1.10.0/datatables.bootstrap3.js"></script>


    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
