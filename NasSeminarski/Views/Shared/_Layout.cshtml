@using System.Linq
@using NasSeminarski.Models
@using MVC.Helper
@{
    Korisnik korisnik = Autentifikacija.GetLogiraniKorisnik(Context);

}



<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <title>Hotel Studentikus - Upravnik</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no, minimum-scale=1.0, maximum-scale=1.0">

    <!-- Open Sans font from Google CDN -->
    <link href="http://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,400,600,700,300&subset=latin" rel="stylesheet" type="text/css">

    <!-- Pixel Admin's stylesheets -->
    <link href="~/AdminTemplate/stylesheets/bootstrap.css" rel="stylesheet" type="text/css">
    <link href="~/AdminTemplate/stylesheets/pixel-admin.css" rel="stylesheet" type="text/css">
    <link href="~/AdminTemplate/stylesheets/widgets.css" rel="stylesheet" type="text/css">
    <link href="~/AdminTemplate/stylesheets/rtl.css" rel="stylesheet" type="text/css">
    <link href="~/AdminTemplate/stylesheets/themes.css" rel="stylesheet" type="text/css">

    <!--[if lt IE 9]>
        <script src="~/Template/javascripts/ie.min.js"></script>
    <![endif]-->

</head>
<body class="theme-asphalt">

    <div id="main-wrapper">
        @Html.Partial("_TopBar")


        <div id="main-menu" role="navigation">

            <div id="main-menu-inner">
                <ul class="navigation">
                    @if (korisnik.Uloge.Naziv == "Upravnik")
                    {
                        @Html.Partial("_UlogaUpravnik")
                    }
                    
                    @if (korisnik.Uloge.Naziv == "Sobarica")
                    {
                        @Html.Partial("_Sobarica")
                    }
                    @if (korisnik.Uloge.Naziv == "Gost")
                    {
                        @Html.Partial("_Gost")
                    }
              @if (korisnik.Uloge.Naziv == "Student")
                {
                        @Html.Partial("UlogaStudent")
               }


                   
                </ul>
            </div>

        </div>

        <div id="content-wrapper">
            @RenderBody()
        </div>

        <div id="main-menu-bg"></div>
    </div>

