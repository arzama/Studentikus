@using NasSeminarski.Models
@model NasSeminarski.Areas.ModulRacunovodja.Controllers.UplateController.UrediVM
</br>
<h2 style="color:darksalmon"><b>Evidencija uplata</b></h2>
<br />

@using (Html.BeginForm("Snimi", "Uplate"))
{
    @Html.HiddenFor(model => model.Id)

    <div class="form-group">
        <label>Student</label>
        @Html.DropDownListFor(model => model.studentId, Model.StudentStavka, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.studentId)


    </div>
    <div class="form-group">
        <label>Datum uplate</label>
        @Html.TextBoxFor(model => model.Datum, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Datum)
    </div>

    <div class="form-group">
        <label>Iznos uplate</label>
        @Html.TextBoxFor(model => model.IznosUplate, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.IznosUplate)
    </div>

    <div class="form-group">
        <label>Svrha uplate</label>
        @Html.TextBoxFor(model => model.svrhaUplate, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.svrhaUplate)
    </div>
    

    <div>
        @Html.ValidationSummary()
    </div>
    <input type="submit" value="Snimi" class="btn btn-danger" />
}

