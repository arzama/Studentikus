@using System
@using System.Collections.Generic
@using System.IdentityModel
@using NasSeminarski.Models

@model NasSeminarski.Areas.ModulGost.Models.SobaPrikaziViewModel

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Prikazi</title>
</head>
<body>

    <h2><b>Sobe</b></h2>
    <div>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Broj sobe</th>
                    <th>Sprat</th>
                    <th>Akcija</th>
                </tr>
            </thead>
            @foreach (Soba x in Model.sobe)
            {
                <tr>
                    <td>@x.BrojSobe</td>
                    <td>@x.Sprat</td>
                    <td>
                        @Html.ActionLink("Rezerviši", "Uredi", new { raId = @x.Id }, new { @class = "btn btn-primary btn-sm" })
                    </td>
                </tr>

            }
        </table>
    </div>
</body>
</html>
