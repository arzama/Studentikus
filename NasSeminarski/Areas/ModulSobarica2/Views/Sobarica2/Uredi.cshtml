@using System
@using System.Collections.Generic
@using System.IdentityModel
@using NasSeminarski.Models

@model NasSeminarski.Areas.ModulSobarica2.Models.SobaricaUrediViewModel
@*@{
    
    Layout = null;
}*@
<h2><b>Evidencija čišćenja</b></h2>
<br />
<br />
<form action="/ModulSobarica2/Sobarica2/Snimi" method="post">
    @Html.HiddenFor(model => model.Id)

    <br />
    <br />
    <div class="form-group">
        <label>Datum</label>
        @Html.TextBox("Datum", Model.Datum.ToMyStrDMYYYY(""), new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Datum)
    </div>

    <div class="form-group">
        <label>Komentar</label>
        @Html.TextBoxFor(model => model.Komentar, new { @class = "form-control" })

    </div>

    <div class="form-group">
        <label>Broj sobe</label>
        @Html.DropDownListFor(model => model.SobaId, Model.SobeStavke, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.SobaId)
    </div>
    <div>
        @Html.ValidationSummary()
    </div>
    <br />
    <br />
    <input id="btn_Sacuvaj" type="submit" value="Sačuvaj" class="btn btn-success btn-sm" />

</form>