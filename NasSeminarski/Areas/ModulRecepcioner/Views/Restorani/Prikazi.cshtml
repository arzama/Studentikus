@using System
@using System.Collections.Generic
@using System.IdentityModel
@using NasSeminarski.Models

@model NasSeminarski.Areas.ModulRecepcioner.Models.RezervacijaRestoranaPrikaziViewModel



<h2><b>Upravljanje rezervacijama restorana</b></h2>


<table class="table table-striped" style="border-bottom-color:ActiveBorder">
    <thead>
        <tr>
            <th>Naziv dešavanja</th>
            <th>Datum</th>
            <th>Ime gosta</th>
            <th>Prezime gosta</th>
            @*<th>Iznos računa</th>*@
            <th>Akcija</th>
        </tr>
    </thead>

    @foreach (RezervacijaRestorana x in Model.restorani)
    {
        <tr>
            <th>@x.Desavanja.Naziv</th>
            <th>@x.Desavanja.Datum</th>
            <th>@x.Desavanja.Ime</th>
            <th>@x.Desavanja.Prezime</th>
            @*<th>@x.Desavanja.Racun.Iznos</th>*@

            <td>

                @Html.ActionLink("Uredi", "Uredi", new { Id = @x.Id },new { @class = "btn btn-danger"})
                <br />
                <br />
                @Html.ActionLink("Otkazi rezervaciju", "Obrisi", new { Id = @x.Id } , new { @class = "btn btn-danger"})

            </td>
        </tr>
    }
</table>
</br>
