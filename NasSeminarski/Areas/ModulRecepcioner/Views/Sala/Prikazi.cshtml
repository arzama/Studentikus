@using System
@using System.Collections.Generic
@using System.IdentityModel
@using NasSeminarski.Models

@model NasSeminarski.Areas.ModulRecepcioner.Models.RezervacijaSalePrikaziViewModel

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Prikaz rezervacija</title>
</head>
<body>

    <h1 style="color:darksalmon"><b>REZERVACIJE SALE</b></h1>

    <table class="table table-striped" style="border-bottom-color:ActiveBorder">
        <thead>
            <tr>
                <th>Naziv događaja</th>
                <th>Datum</th>
                <th>Ime gosta</th>
                <th>Prezime gosta</th>
                <th>Broj telefona</th>
                <th>Iznos računa</th>
            </tr>
        </thead>

        @foreach (NasSeminarski.Areas.ModulRecepcioner.Models.RezervacijaSalePrikaziViewModel.Rezervacije x in Model.rezervacije)
        {
            <tr>
                <th>@x.Naziv</th>
                <th>@x.Datum</th>
                <th>@x.Ime</th>
                <th>@x.Prezime</th>
                <th>@x.BrojTelefona</th>
                <th>@x.Iznos</th>

                <td>
                    @Html.ActionLink("Uredi", "Uredi", new { Id = @x.rezervacijaId }, new { @class = "btn btn-danger" })
                    <br />
                    <br />
                    @Html.ActionLink("Ponisti rezervaciju", "Obrisi", new { Id = @x.rezervacijaId },new { @class = "btn btn-danger"})

                </td>
            </tr>
        }
    </table>
    </br>
    </br>
    </br>
    <a href="/ModulRecepcioner/Sala/Dodaj" class="btn btn-danger">
        <span class=" glyphicon glyphicon-plus" aria-hidden="true">
        </span>
        Dodaj novu rezervaciju
    </a>

    </br>
    </br>

    <a href="/ModulRecepcioner/Sala" class="btn btn-danger">
        <span class=" glyphicon glyphicon-home" aria-hidden="true">
        </span>
        Vrati se natrag
    </a>
    </body>
</html>

