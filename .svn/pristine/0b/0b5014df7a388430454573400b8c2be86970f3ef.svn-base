@using NasSeminarski.Helper
@using NasSeminarski.Models
@using MVC.Helper
@{
    Korisnik korisnik = Autentifikacija.GetLogiraniKorisnik(Context);
}

<li class="dropdown">

    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><span class="caret"></span></a>
    <ul class="dropdown-menu" role="menu">
        @if (korisnik.Uloge.Naziv=="Gost")
        {
            <li><a href="/ModulGost/Gost/Index">Gost</a></li>
        }
        @if (korisnik.Uloge.Naziv =="Recepcioner")
        {
            <li><a href="/ModulRecepcija/Recepcija">Recepcioner</a></li>
        }
     
        <li class="divider"></li>
        <li>@Html.ActionLink("Logout", "Logout", "Login", new { area = "" }, new { })</li>
    </ul>
</li>